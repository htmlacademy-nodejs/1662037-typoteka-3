section.main-page__hot.hot
  h2.hot__name
    | Самое обсуждаемое
    span.hot__icon.hot__icon--fire
  if mostCommentedArticles.length === 0
    p.hot__empty
      | Здесь пока ничего нет...
  else
    ul.hot__list
      each article in mostCommentedArticles
        li.hot__list-item
            a.hot__list-link(href=`/articles/${article.id}`) #{truncateText(article.announce, maxAnnounceLength)}
              sup.hot__link-sup #{article.commentsCount}
