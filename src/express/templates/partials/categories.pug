section.main-page__theme-list
  h2.visually-hidden Список тем
  ul.themes
    each category of categories
      li.themes__item
        a(
          class=`themes__item-link ${currentCategory && currentCategory.id === category.id ? `themes__item-link--active` : ``}`
          href=`${currentCategory && currentCategory.id === category.id ? `#` : `/articles/category/${category.id}`}`
          )
          | #{category.name}
          sup #{category.count}
