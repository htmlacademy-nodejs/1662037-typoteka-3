section.main-page__list.preview
      h2.visually-hidden Список превью статей
      ul.preview__list
        each article of articles
          li.preview__item
            ul.preview__breadcrumbs
              each theme of article.categories
                li.preview__breadcrumbs-item
                  a.preview__breadcrumbs-link(href='#') #{theme.name}
            .preview__background
              img.preview__background-image(src=`img/${article.picture}` width='460' height='240' srcset=`img/${article.picture} 1x, img/${article.picture ? article.picture.slice(0, -6) : ``}2x.jpg 2x` alt='Фотография небоскреба')
            time.preview__time(datetime=article.createdAt) #{moment(article.createdAt).format('DD.MM.YYYY, HH:MM')}
            h3.preview__name
              a.preview__name-link(href=`/articles/${article.id}`) #{article.title}
            p.preview__text
              #{article.fullText}
            a.preview__comment(href='#')
              | Комментарии
              span.preview__cloud
              b.preview__comment-count &nbsp;#{article.comments.length}
.preview__toggle-wrapper
  +pagination(page, totalPages, 2, `?`)
